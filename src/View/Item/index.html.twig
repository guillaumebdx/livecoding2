{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Items</h1>
    <ul>
        {% for item in items %}
            <li>
                <a href="/item/show/{{ item.id }}">
                    {{ item.id }}. {{ item.title }}
                </a>
                <button class="heart" data-item="{{ item.id }}" data-user="{{ session.id }}">COEUR</button>
            </li>
        {% else %}
            <li>Nothing to display</li>
        {% endfor %}
    </ul>
    <a href="/item/add">Ajouter</a>
    <p id="result" class="alert alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </p>
{% endblock %}
